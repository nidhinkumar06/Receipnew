<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:id="@+id/oimgview" />

        </LinearLayout>
        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="100dp"
            android:layout_weight="0.84">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:hint="Merchant Name"
                    android:layout_height="match_parent"
                    android:id="@+id/olsmerchantname" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:hint="Paid on"
                    android:layout_height="match_parent"
                    android:id="@+id/olspaiddate" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:hint="Status:"
                    android:layout_height="match_parent"
                    android:id="@+id/olsstatus" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:hint="paidwith"
                    android:visibility="gone"
                    android:id="@+id/olspaidwith"
                    android:layout_height="wrap_content"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:hint="category"
                    android:visibility="gone"
                    android:id="@+id/olscategory"
                    android:layout_height="wrap_content"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:hint="comment"
                    android:visibility="gone"
                    android:id="@+id/olscomment"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:hint="$"
                android:id="@+id/omoneydetails"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:hint=" Amt"
                android:layout_height="match_parent"
                android:id="@+id/olsamount" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>